<% layout('/layouts/boilerplate') -%>

    <div class="row justify-content-center py-5 auth-wrapper">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="auth-card shadow-sm">
                <div class="auth-header">
                    <i class="fa-solid fa-house-circle-check me-2"></i>
                    <span>Welcome back</span>
                </div>
                <form action="/login" method="POST" class="needs-validation auth-form" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control form-control-lg" placeholder="johndoe" required>
                        <div class="invalid-feedback">Please enter your username.</div>
                    </div>
                    <div class="mb-2">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control form-control-lg" placeholder="••••••••" required>
                        <div class="invalid-feedback">Please enter your password.</div>
                    </div>
                    <div class="d-flex justify-content-end mb-3">
                        <a href="#" class="auth-link small">Forgot password?</a>
                    </div>
                    <button class="btn btn-haven w-100 btn-lg" type="submit">Log in</button>
                    <p class="text-center mt-3 small text-muted">We’ll never share your details.</p>
                </form>
                <div class="text-center mt-3">
                    <span class="small">New to Haven?</span>
                    <a href="/signup" class="auth-link">Create an account</a>
                </div>
            </div>
        </div>
    </div>