<% layout('/layouts/boilerplate') -%>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card shadow-sm border-0" style="border-radius:16px;">
        <div class="card-body p-4 p-md-5">
          <div class="d-flex align-items-center mb-3">
            <i class="fa-solid fa-circle-question me-2" style="color:#ff385c;font-size:22px;"></i>
            <h1 class="h4 mb-0" style="letter-spacing:-0.2px;">Help Center</h1>
          </div>
          <p class="text-muted mb-4" style="max-width:60ch;">Find quick answers to common questions. If you still need help, contact us.</p>
          <div class="row g-3 g-md-4">
            <div class="col-12 col-md-6 col-lg-4">
              <a href="#" class="help-tile">
                <div class="help-icon"><i class="fa-regular fa-user"></i></div>
                <div class="help-content">
                  <div class="help-title">Account & login</div>
                  <div class="help-desc">Manage your account, login issues</div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
              <a href="#" class="help-tile">
                <div class="help-icon"><i class="fa-solid fa-house"></i></div>
                <div class="help-content">
                  <div class="help-title">Hosting</div>
                  <div class="help-desc">List your place, host resources</div>
                </div>
              </a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
              <a href="#" class="help-tile">
                <div class="help-icon"><i class="fa-regular fa-calendar"></i></div>
                <div class="help-content">
                  <div class="help-title">Bookings</div>
                  <div class="help-desc">Reservations, changes, cancellations</div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

